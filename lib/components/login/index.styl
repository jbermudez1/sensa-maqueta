// login
.login
	background-image url('../img/loginbg.jpg')
	height 100vh
	background-size cover
	display flex
	flex-flow column
	justify-content center
	align-items center
	.login-box
		background-color white
		width 80%
		box-shadow 0px 0px 10px black
		display flex
		flex-flow column
		padding 2em
		justify-content center
		align-items center
		form
			width 100%
			text-align center
		.clientesensa
			width 15em
		.inputgroup
			text-align left
			width 100%
			display flex
			flex-flow column
			padding-top 2em
			label
				color #2F307C
				font-weight 400
			input 
				font-size 1.5em
				font-weight 100
				border 0
				border-bottom solid 1px lightgray
		.enterlogin
			background-color #2F307C
			border 0px
			color white
			padding 0.5em
			margin-top 2em
			width 8em
	.pielogin
		text-align center
		color white
		opacity 0.5
		padding-top 1em
		p
			line-height 1em
		a 
			color white
			text-decoration underline
@media (min-width: $screen-md-min)
	.login
		.login-box
			width 30%
